.row.col-md-4.col-md-offset-4
	%h2 contact
.row.col-md-6.col-md-offset-3.hidden-xs
	= form_for :post, :url => post_contact_path, :html => {:name => 'contact'}, :validation => true do |f|
		.form-group
			= f.label :Yourname
			= f.text_field :name, :class => 'form-control', 'ng-model' => 'name', :required => ''
		.form-group
			= f.label :Email
			= f.email_field :email, :class => 'form-control', 'ng-model' => 'email', :required => ''
		.form-group
			= f.label :Phone
			= f.number_field :phone, :class => 'form-control', :required => 'required', 'ng-model' =>"phone"
		.form-group
			= f.label :content
			= f.text_area :content , :class => 'form-control', :row => '3'
		%p{'ng-show'=> "contact.$valid"}
			= f.submit :class => 'btn btn-default', :value =>'Send contact'			
		%p{'ng-hide'=> "contact.$valid"}
			= f.submit :class => 'btn btn-default', :value =>'Send contact', disabled: true
			


