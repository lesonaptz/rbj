<div class="row"><div class="col-md-4 col-md-offset-4"><h2>contact </h2></div></div>


<div class="row">
  <div class="col-md-6 col-md-offset-3 hidden-xs">
    
    <%= form_for :post, url: post_contact_path, :html => {:name => 'contact'}  do |f| %>

      <div class="form-group">
        <div class="">
          <%= f.label :email %><br>
          <%= f.email_field :email, :class => 'form-control', :id =>"exampleInputEmail1", :placeholder => "Enter email",:required => '', 'ng-model' => "email"%>
        <div>
        <div class=""> 
          <span class="error glyphicon glyphicon-remove" ng-show="contact.$error.email"></span>          
        </div>
      </div>
      
      <div class="form-group">
          <%= f.label :content %><br>
          <%= f.text_area :content, :class => 'form-control', :row => '3' %>
      </div>

      <p ng-show="contact.$valid">
        <%= f.submit :class => "btn btn-default", :value => 'Send contact' %>
      </p>
      <p ng-hide="contact.$valid">
        <%= f.submit :class => "btn btn-default", :value => 'Send contact', :disabled => true %>
      </p>
    <% end %>

  </div>
</div>